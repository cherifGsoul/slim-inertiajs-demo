{
    "name": "luke-watts/noesis-framework",
    "description": "Noesis Framework: Slim PHP (v4) with InertiaJS, React (v18) and TailwindCSS front-ends for robust SPAs with less API requests",
    "licence": "MIT",
    "autoload": {
        "psr-4": {
            "Noesis\\": "src/",
            "App\\": "server/app"
        }
    },
    "authors": [
        {
            "name": "Luke Watts",
            "email": "watts.luke85@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "cherif/inertia-psr15": "^0.1.0",
        "laminas/laminas-diactoros": "^2.10",
        "php-di/php-di": "^6.4",
        "slim/slim": "4.*",
        "slim/php-view": "^3.1",
        "zeuxisoo/slim-whoops": "^0.7.3",
        "monolog/monolog": "^3.1",
        "symfony/console": "^6.1",
        "psy/psysh": "^0.11.5"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "maximebf/debugbar": "^1.18"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
